<div class="container">
	<div class="row">
  		<div class="col-md-6 col-md-offset-3">
  			<h1> Simplify your link! </h2>
			
			<%= form_for :shorten, url: '/urls/create', :html => {:class => 'text-center'} do |f| %>
			  <p>
			    <%= f.text_field :original_url, class: "form-control", id: "input_url", placeholder: "Paste your url and hit enter" %> 
			  </p>

			  <p>
			    <%= f.submit :Shorten, class: "btn btn-primary" %>
			  </p>
			<% end %>
  		</div>
	</div>
	
	
</div>